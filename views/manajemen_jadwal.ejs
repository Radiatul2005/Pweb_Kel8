<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manajemen Jadwal</title>
    <link rel="stylesheet" href="/stylesheets/manajemen_jadwal.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js"></script>
</head>
<body>
    <%- include('partials/navbartegar.ejs') %>
    <div class="content">
        <h1>Jadwal Sidang</h1>

        <% if (success_msg) { %>
            <div class="alert alert-success">
                <%= success_msg %>
            </div>
        <% } %>

        <% if (error_msg) { %>
            <div class="alert alert-danger">
                <%= error_msg %>
            </div>
        <% } %>

        <div class="table-container">
            <table>
                <thead>
                    <tr>
                        <th>Jadwal ID</th>
                        <th>NIM Mahasiswa</th>
                        <th>Waktu Sidang</th>
                        <th>Ruangan</th>
                        <th>Aksi</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    <% jadwalsidang.forEach((jadwal) => { %>
                        <tr>
                            <td><%= jadwal.JadwalID %></td>
                            <td><%= jadwal.NIM %></td>
                            <td>
                                <script>
                                    document.write(moment('<%= jadwal.WaktuSidang %>').format('YYYY-MM-DD HH:mm:ss'));
                                </script>
                            </td>
                            <td><%= jadwal.Ruangan %></td>
                            <td>
                                <% if (jadwal.Status === 'Belum Ada') { %>
                                    <form action="/manajemen_jadwal/ambil_jadwal/<%= jadwal.JadwalID %>" method="POST">
                                        <button type="submit">Ambil</button>
                                    </form>
                                <% } else if (jadwal.Status === 'Menunggu Persetujuan') { %>
                                    <form action="/manajemen_jadwal/undo_ambil_jadwal/<%= jadwal.JadwalID %>" method="POST">
                                        <button type="submit">Batalkan</button>
                                    </form>
                                <% } else { %>
                                    <span>Status tidak valid</span>
                                <% } %>
                            </td>
                            <td><%= jadwal.Status %></td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
