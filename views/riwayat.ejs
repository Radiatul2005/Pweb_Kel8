<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Riwayat Sidang</title>
    <link rel="stylesheet" href="/stylesheets/riwayat.css">
</head>
<body class="bg-white">
    <div class="container">
        <div class="sidebar">
            <%- include('partials/navbartegar.ejs') %>
        </div>
        <div class="main-content">
            <div class="table-container">
                <h3 class="title">Riwayat Sidang</h3>
                <table class="history-table">
                    <thead>
                        <tr>
                            <th>Sidang Ke-</th>
                            <th>Dosen Penguji</th>
                            <th>Hari/Tanggal</th>
                            <th>Hasil Akhir</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% data.forEach(function(item) { %>
                            <tr>
                                <td><%= item.nomor_sidang %></td>
                                <td><%= item.dosen_penguji %></td>
                                <td><%= new Date(item.hari_tanggal).toLocaleDateString('id-ID', { year: 'numeric', month: 'long', day: 'numeric' }) %></td>
                                <td class="<% if (item.hasil_akhir === 'Lulus') { %> text-success <% } else { %> text-danger <% } %>"><%= item.hasil_akhir %></td>
                                <td><a href="/detailRiwayat" class="view-link">View</a></td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</body>
</html>
